<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:text="04.03.18" />


        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"

            android:text="To be, or not to be, that is the question: \nWhether 'tis nobler in the mind to suffer \nThe slings and arrows of outrageous fortune, \nOr to take arms against a sea of troubles..."
            android:maxLines="4"
            android:textColor="@color/mainText" />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/message"
            android:layout_marginTop="6dp"
            android:background="@color/line" />


        <ImageView
            android:id="@+id/photo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/line"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"

            android:src="@drawable/image"/>

        <ImageButton
            android:id="@+id/important"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@id/line"
            android:layout_toLeftOf="@id/done"
            android:layout_toStartOf="@id/done"

            android:src="@drawable/ic_important"
            android:background="@drawable/circle_ripple"
            android:clickable="true"
            android:focusable="true"/>

        <ImageButton
            android:id="@+id/done"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@id/line"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:src="@drawable/ic_done"
            android:background="@drawable/circle_ripple"
            android:clickable="true"
            android:focusable="true"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>

